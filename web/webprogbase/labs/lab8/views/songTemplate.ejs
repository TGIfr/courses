<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Just some cool songs</title>
    <meta name="description" content="kinda list of some songs">
    <meta name="author" content="TGIfr aka RuntimeJunky">
    <link type="text/css" href="/stylesheets/style.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<% include partials/header %>
<div class = "song-content">
    <h1><%=  song.author %></h1>
    <p><%=  song.name %></p>
    <img src=<%= song.img %> >

    <hr/>
    <p><%=  song.info %></p>
    <p>Length is <%=  song.length %> seconds</p>
</div>
<a href="/songs">Go back</a>
<form action="/delete" method="post" enctype="multipart/form-data" style="text-align: center">
    <input type="hidden" name="id" value=<%=  song.id.toString() %>>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Delete</button>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">YOU SURE?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-danger" value="Exterminate">
                </div>
            </div>

        </div>
    </div>

</form>
</body>
</html>